<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp" />

    <!-- Name input -->
    <EditText
        android:id="@+id/name_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your name" />

    <!-- Fact input -->
    <EditText
        android:id="@+id/fact_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter fact"/>

    <!-- Radio group for favorite programming language -->
    <RadioGroup
        android:id="@+id/language_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_java"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English" />

        <RadioButton
            android:id="@+id/radio_kotlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swedish" />

        <RadioButton
            android:id="@+id/radio_python"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Korean" />
    </RadioGroup>

    <!-- CheckBox for Student -->
    <CheckBox
        android:id="@+id/student_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you a student?" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />

</LinearLayout>